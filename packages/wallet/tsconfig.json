{
  "extends": "@web3sheet/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/componets/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/providers/*": ["./providers/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    "postcss.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tests/**.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
